#!/bin/bash

# Usage: ./generate-nginx-config.sh project-name

PROJECT="$1"

if [[ -z "$PROJECT" ]]; then
    echo "Usage: $0 <project-name>"
    exit 1
fi

if [[ -z "$PROJECTS_DIR" ]]; then
    PROJECTS_DIR="$HOME/Projects"
fi;

if [[ ! -d "$PROJECTS_DIR" ]]; then
    echo "ERROR: PROJECTS_DIR points to non-existent directory. Please provide a valid path to where your projects are."
    echo "Example usage: PROJECTS_DIR=$HOME/Projects  $0 <project-name>"
    exit 1
fi

DOMAIN="$PROJECT.test"
PROJECT_PATH=$(realpath "$PROJECTS_DIR/$PROJECT")
CERT_PATH="/etc/ssl/certs/$DOMAIN.crt"
KEY_PATH="/etc/ssl/private/$DOMAIN.key"

cat <<EOF
# Redirect HTTP to HTTPS
server {
    listen 80;
    listen [::]:80;
    server_name $DOMAIN;
    return 301 https://\$host\$request_uri;
}

# HTTPS Server
server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name $DOMAIN;
    root $PROJECT_PATH/public;

    ssl_certificate $CERT_PATH;
    ssl_certificate_key $KEY_PATH;

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";

    index index.php;
    charset utf-8;

    location / {
        try_files \$uri \$uri/ /index.php?\$query_string;
    }

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    error_page 404 /index.php;

    location ~ ^/index\\.php(/|\$) {
        fastcgi_pass unix:/home/hayley/.valet/valet.sock;
        fastcgi_param SCRIPT_FILENAME \$realpath_root\$fastcgi_script_name;
        include fastcgi_params;
    }

    location ~ /\.(?!well-known).* {
        deny all;
    }
}
EOF
